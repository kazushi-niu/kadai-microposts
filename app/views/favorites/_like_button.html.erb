<% if current_user.favpost?(micropost) %>
  <!-- お気に入り解除ボタン(フォローしていない場合) -->
  <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm d-inline-block' %>
  <% end %>
<% else %>
  <!-- お気に入り登録ボタン(フォローしいる場合) -->
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm d-inline-block' %>
  <% end %>
<% end %>
